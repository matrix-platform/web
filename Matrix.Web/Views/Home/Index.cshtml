@model HomeViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><b>Matrix</b></h3>
    </div>
    <div class="panel-body">
        Welcome to matrix platform, an microservices chassis framework with built-in boilerplate modules.
        <br />
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td width="33%"><b>Module</b></td>
                    <td width="33%" style="text-align:center"><b>Healthy</b></td>
                    <td width="33%" style="text-align:center"><b>Errors</b></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Health)
                {
                    <tr>
                        <td>@i.Key</td>
                        <td style="text-align:center">@i.Value.Healthy</td>
                        <td style="text-align:center">@i.Value.Errors.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>